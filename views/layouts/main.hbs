<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://bootswatch.com/5/simplex/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="/styles/main.css" />
    <title>PORTKET</title>
  </head>
  <body>
    <div class="body-container row position-relative">
      <!--nav bar-->
      <header>
        <nav class="navbar bg-light justify-content-between py-2 px-4">
          <a class="navbar-brand fw-bold" href="/">
            {{#if isAuthenticated}}{{currentUser.name}}'s{{/if}}
            <span class="text-primary">PORT</span><span>KET</span>
          </a>
          {{#if isAuthenticated}}
          <div class="navbar-right">
            <!--my portfolio-->
              <a class="my-portfolio-icon" href="/users/{{currentUser.id}}">
                <i class="fa-solid fa-user"></i>
              </button>
            <!--logout-->
            <a class="btn btn-outline-primary" href="/users/logout">Logout</a>
            {{else}}
            <!--login-->
            <a class="btn btn-primary" href="/users/login">Login</a>
            {{/if}}
          </div>
        </nav>
      </header>
      <!--warning-->
      <div class="position-fixed top-0 start-50 translate-middle mt-5 col-md-6 m-auto">{{> message}}</div>
    </div>

    <!--main content-->
    <div>{{{body}}}</div>

    <!--footer-->
    <div class="footer">{{> footer}}</div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>
    <script src="/javascript/index.js"></script>
  </body>
</html>

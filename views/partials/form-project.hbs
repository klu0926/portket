<!--add project--->
<div id="form-project-container" class="form-display-container">
  <div class="form-box">
    <!--from close button-->
    <div class="form-close">
      <button id="form-project-container-close" type="button" class="form-close-btn">
        <i class="fa-solid fa-xmark"></i>
      </button>
    </div>
    <!--form title banner-->
    <div class="form-title-banner">
      <p class="h2 mb-3 form-box-title">Add Project</p>
    </div>

    <!--form-->
    <form id="form-project" class="form needs-validation" action="/projects" method="POST" enctype="multipart/form-data" novalidate>
      <!--title-->
      <div class="form-div">
        <label class="form-label" for="project-title">Title</label>
        <input name="title" type="text" class="form-control" id="project-title" required minlength="5" maxlength="30" />
        <div class="invalid-feedback">Title require 5 - 30 characters.</div>
      </div>
      <!--date-->
      <div class="form-div">
        <label class="form-label" for="project-date">Date</label>
        <input name="date" type="date" class="form-control" id="project-date" lang="en" required />
        <div class="invalid-feedback">Date is required.</div>
      </div>
      <!--cover-->
      <div class="form-div">
        <label class="form-label" for="project-cover" style="width: 100%">
          <p class="mb-2">Cover</p>
          <div id="form-project-cover-display" class="form-cover">
            <img id="form-project-cover-image" class="form-project-cover-image" src="" alt="cover image" />
          </div>
        </label>
        <input id="form-project-cover-input" name="cover" type="file" class="form-control" id="project-cover" accept="image/png, image/jpeg" placeholder="image" style="display: none" required />
        <div class="invalid-feedback">Cover image is required.</div>
      </div>
      <!--description-->
      <div class="form-div">
        <label class="form-label" for="project-description">Description</label>
        <textarea name="description" class="form-control" id="project-description" rows="6" required minlength="20"></textarea>
        <div class="invalid-feedback">Description require at least 20 characters.</div>
        <div class="form-text mt-2">Tell us more about the project, what is the project for, what is the goal, and what is the result. Be as detail as possible.</div>
      </div>
      <!--skills-->
      <div class="form-div">
        <label class="form-label" for="">Skills</label>
        <div class="form-page-skill-window">
          {{#each allSkills}}
          <div class="form-check">
            <label class="form-check-label" for="skill{{this.id}}"> <input id="skill{{this.id}}" name="skills" class="form-check-input" type="checkbox" value="{{this.id}}" /> {{this.name}} </label>
          </div>
          {{/each}}
        </div>
        <div class="form-text mt-2">Select skills you use in your project.</div>
      </div>
      <!--links-->
      <div class="form-div">
        <label class="form-label">Links</label>
        <div class="link-row-container">
          <!--Link sample-->
          <div id="new-link-input-sample" class="link-row none">
            <div class="row g-2">
              <div class="link-input-left col-3">
                <input name="linkName" type="text" class="link-name-input form-control" placeholder="name" disabled />
                <div class="invalid-feedback">Link's name is required.</div>
              </div>
              <div class="link-input-right col-8">
                <div class="link-input-right-inner">
                  <input name="linkUrl" type="text" class="link-url-input form-control" placeholder="url" disabled />
                  <div class="invalid-feedback">Link's url is required.</div>
                </div>
                <div class="link-remove-btn-div">
                  <button class="link-remove-btn" type="button">
                    <i class="fa-solid fa-xmark"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
          <!---->
        </div>
        <div>
          <!--Add link row-->
          <div class="link-row">
            <div class="row g-2">
              <div class="link-input-left col-3">
                <input type="text" class="form-control" placeholder="name" disabled />
              </div>
              <div class="link-input-right col-8">
                <div class="link-input-right-inner">
                  <input type="text" class="form-control" placeholder="url" disabled />
                </div>
                <div class="link-add-btn-div">
                  <button class="link-add-btn" type="button">
                    <i class="fa-solid fa-plus"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!--Each link need to have a delete button , like todo list--->
      <!--Add a 'Add link' button to the right of the Link label--->

      <!--submit-->
      <button type="submit" class="w-100 btn btn-primary mt-2">
        <span id="project-submit-text">Submit</span>
        <div id="project-loading-indicator" class="loading-indicator">
          <p>Creating Project...</p>
          <div class="loading-ring"></div>
        </div>
      </button>
      <!--reset-->
      <div class="d-flex justify-content-center">
        <span type="button" id="projectFormReset" class="reset-button my-2">Reset Form</span>
      </div>
    </form>
    <!--close box-->
  </div>
  <!--close container-->
</div>

<!--script-->
<script type="module" src="/dist/form-add-project-mvc.bundle.js"></script>

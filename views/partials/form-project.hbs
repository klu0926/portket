<!--add project--->
<div id="form-project" class="form-display-container">
  <div class="form-box">
    <!--from close button-->
    <div class="form-close">
      <button id="form-project-close" type="button" class="form-close-btn">
        <i class="fa-solid fa-xmark"></i>
      </button>
    </div>
    <!--form title banner-->
    <div class="form-title-banner">
      <p class="h2 mb-3 form-box-title">Add Project</p>
    </div>
    <!--form-->
    <form id="project-form" class="form" action="#" method="post" enctype="multipart/form-data">
      <!--title-->
      <div class="form-div">
        <label class="form-label" for="project-title">Title</label>
        <input name="title" type="text" class="form-control" id="project-title" required />
      </div>
      <!--date-->
      <div class="form-div">
        <label class="form-label" for="project-date">Date</label>
        <input name="date" type="date" class="form-control" id="project-date" lang="en" required />
      </div>
      <!--cover-->
      <div class="form-div">
        <label class="form-label" for="project-cover" style="width: 100%">
          <p class="mb-2">Cover</p>
          <div class="form-cover">
            <img src="" alt="project cover" />
          </div>
        </label>
        <input name="cover" type="file" class="form-control" id="project-cover" accept="image/png, image/jpeg" placeholder="image" required />
      </div>
      <!--description-->
      <div class="form-div">
        <label class="form-label" for="project-description">Description</label>
        <textarea name="description" class="form-control" id="project-description" rows="3" required></textarea>
        <div class="form-text mt-2">Tell us more about the project, what is the project for, what is the goal, and what is the result. Be as detail as possible.</div>
      </div>
      <!--skills-->
      <div class="form-div">
        <label class="form-label" for="">Skills</label>
        <div class="form-page-skill-window">
          {{#each allSkills}}
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="{{this.id}}" id="skill{{this.id}}" />
            <label class="form-check-label" for="skill{{this.id}}"> {{this.name}} </label>
          </div>
          {{/each}}
        </div>
        <div class="form-text mt-4">Select skills you use in your project.</div>
      </div>
      <!--links-->
      <div class="form-div">
        <label class="form-label">Links</label>
        <div class="link-row-container">
          <!--link row-->
          <div class="link-row">
            <div class="row g-2">
              <div class="col-3">
                <input type="text" class="form-control" placeholder="name" required />
              </div>
              <div class="col-8">
                <input type="text" class="form-control" placeholder="url" required />
              </div>
              <div class="link-remove-btn-div col-1">
                <button class="link-remove-btn" type="button" data-link-index="1">
                  <i class="fa-solid fa-xmark"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
        <div>
          <!--Add row-->
          <div class="link-row">
            <div class="row g-2">
              <div class="col-3">
                <input type="text" class="form-control" placeholder="name" disabled />
              </div>
              <div class="col-8">
                <input type="text" class="form-control" placeholder="url" disabled />
              </div>
              <div class="link-add-btn-div col-1">
                <button type="button" class="link-add-btn">+</button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!--Each link need to have a delete button , like todo list--->
      <!--Add a 'Add link' button to the right of the Link label--->

      <!--submit-->
      <button type="submit" class="w-100 btn btn-primary mt-2">Submit</button>
    </form>
    <!--close box-->
  </div>
  <!--close container-->
</div>

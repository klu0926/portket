<!--myProject-->
<!--main container-->
<div class="container" style="min-height: 600px">
  <!--cover-->
  <div class="project-page-cover">
    <img src="{{project.cover}}" alt="project cover" />
  </div>

  <div class="project-page-container">
    <!--project info-->
    <div class="project-page-info">
      <!--title-->
      <div class="project-page-title h1">
        <p>{{project.title}}</p>
      </div>
      <!--User & date-->
      <div class="mb-3 d-flex">
        <div class="project-user-avatar me-2">
          <a class="project-page-a" href="/users/{{project.user.id}}">
            <img src="{{project.user.avatar}}" alt="avatar" />
          </a>
        </div>
        <div class="d-flex flex-column justify-content-between py-1">
          <a class="project-page-a" href="/users/{{project.user.id}}">
            <span class="fw-bold">{{project.user.name}}</span>
          </a>
          <span class="text-secondary">{{simpleDate project.date}}</span>
        </div>
      </div>
      <!--links-->
      <div class="project-links mb-2">
        {{#each project.links}}
        <span class="project-page-link">
          <a class="project-page-a" href="{{this.link}}" target="_blank">{{this.name}}</a>
          <span>|</span>
        </span>
        {{/each}}
      </div>
      <!--description-->
      <div class="mb-2">
        <p>{{project.description}}</p>
      </div>
      <!--skills-->
      <div class="project-skills">
        {{#each project.skills}}
        <span class="skill-tag">{{this.name}}</span>
        {{/each}}
      </div>
      <!--project info end-->
    </div>
    <!--project images-->
    <div class="project-page-line"></div>
    <div class="project-page-images">
      {{#each project.images}}
      <div class="project-page-image-box">
        <div class="project-page-image">
          <img src="{{this.image}}" alt="project image" />
        </div>
        <div class="mt-2">
          <p class="project-page-image-name">{{this.name}}</p>
          <p class="project-page-image-des">{{this.description}}</p>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>

<script src="/javascript/myProject.js"></script>

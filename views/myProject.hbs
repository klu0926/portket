<!--my project-->
<!--edit mode from-->
<form id="project-form" action="/projects/{{project.id}}?_method=PUT" method="post" enctype="multipart/form-data" novalidate>
  <!--cover input-->
  <input id="cover-input" name="cover" type="file" accept="image/png, image/jpeg" style="display: none" />
  <button id="project-form-submit" style="display: none" type="submit"></button>
  <!--main container-->
  <div class="container" style="min-height: 600px">
    <!--cover-->
    <div id="cover-input-div"></div>
    <div class="project-page-cover">
      <img id="cover-img" src="{{project.cover}}" alt="project cover" />
    </div>
    <div class="project-page-container">
      <!--project info-->
      <div class="project-page-info">
        <!--title-->
        <div class="project-page-title-container">
          <div id="project-title-display">
            <p class="project-page-title">{{project.title}}</p>
          </div>
          <!--title input-->
          <div id="project-title-input">
            <input name="title" type="text" value="{{project.title}}" minlength="6" maxlength="30" placeholder="title" required />
            <div class="invalid-feedback">Require 6 - 30 characters.</div>
          </div>
        </div>
        <!--User & date-->
        <div class="mb-3 d-flex">
          <div class="project-user-avatar me-2">
            <a class="project-page-a" href="/users/{{project.user.id}}">
              <img src="{{project.user.avatar}}" alt="avatar" />
            </a>
          </div>
          <div class="d-flex flex-column justify-content-between py-1">
            <a class="project-page-a" href="/users/{{project.user.id}}">
              <span class="fw-bold">{{project.user.name}}</span>
            </a>
            <span class="text-secondary">{{simpleDate project.date}}</span>
          </div>
        </div>
        <!--links-->
        <div class="project-links mb-2">
          {{#each project.links}}
          <span class="project-page-link">
            <a class="project-page-a" href="{{this.link}}" target="_blank">{{this.name}}</a>
            <span>|</span>
          </span>
          {{/each}}
        </div>
        <!--description-->
        <div class="mb-2">
          <p>{{project.description}}</p>
        </div>
        <!--skills-->
        <div class="project-skills">
          {{#each project.skills}}
          <span class="skill-tag">{{this.name}}</span>
          {{/each}}
        </div>
        <!--project info end-->
      </div>
      <div class="project-page-line"></div>

      <!--project content-->
      <div class="project-content">
        {{#each project.contents}}
        <div class="project-page-content-box">
          {{#if (isSame this.type 'image')}}
          <div class="project-content-image">
            <img src="{{this.content}}" alt="project image" />
          </div>
          {{/if}} {{#if (isSame this.type 'text')}}
          <div class="project-content-text">
            <p>{{this.content}}</p>
          </div>
          {{/if}}
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</form>

<script src="/javascript/myProject.js"></script>

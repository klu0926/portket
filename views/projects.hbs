<div class="container index-container">
  <!--section below the banner-->
  <div class="below-banner">
    <!--search bar-->
    {{> searchBar sort=sort sortDirection=sortDirection column=column totalCount=totalCount currentCount=currentCount columnOptions=columnOptions sortOptions=sortOptions model='projects'}}
    <!--portfolio display-->
    {{#if (isMoreThanTarget currentCount 0)}}
    <div class="cards-display row justify-content-start">{{#each projects}} {{> project-card currentUser=../currentUser}} {{/each}}</div>
  </div>
  {{else}}
  <div class="no-result-display">
    <div>
      <i class="no-result-i fa-regular fa-face-meh"></i>
    </div>
    <div class="d-flex flex-column justify-content-center align-items-center">
      <p class="no-result-p">No Results Found</p>
      <a class="no-result-btn" href="/projects">Go Back</a>
    </div>
  </div>
  {{/if}}

  <!--pagination--->
  {{> pagination totalPages=totalPages page=page column=column sort=sort limit=limit keyword=keyword sortDirection=sortDirection model='projects'}}
</div>

<!--script-->
<script src="/dist/index.bundle.js"></script>
